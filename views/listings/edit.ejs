<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 class="mb-3">Edit Your Listing</h3>
        <form method="POST" action="/listings/<%=listing.id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" value="<%=listing.title%>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please add a title.
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" placeholder="Enter description" rows="3" cols="50" class="form-control" required><%=listing.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please add a small description.
                </div>
            </div>

            <div class="mb-3 prev-image">
          original listing image <br>
          <img src="<%= originalImageUrl %> " alt="">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload new Image </label>
                <input type="file"
                 name="listing[image][url]" 
                 placeholder="Enter URL/link"
                  class="form-control" 
                  >
                
                <div class="invalid-feedback">
                    Please enter a valid URL.
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" value="<%=listing.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" value="<%=listing.country%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid country.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" placeholder="enter location name" class="form-control"  value="<%=listing.location%>" required>
            <div class="invalid-feedback">
                Location should be valid!
              </div>
              <div class="valid-feedback">
                Looks good!
            </div>
           </div>
            
        
            <button type="submit" class="btn btn-dark add-btn mb-5 mt-3">Add</button>
           
        </form>
       </div>
       </div>
</body>
